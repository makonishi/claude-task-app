<div id="<%= dom_id task %>" class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-2xl leading-6 font-bold text-gray-900">
      <%= task.title %>
    </h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">
      Task details and information
    </p>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">
          Description
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= task.description.present? ? task.description : "No description provided" %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Status
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= 
            case task.status
            when 'completed' then 'bg-green-100 text-green-800'
            when 'in_progress' then 'bg-blue-100 text-blue-800'
            when 'on_hold' then 'bg-yellow-100 text-yellow-800'
            else 'bg-gray-100 text-gray-800'
            end
          %>">
            <%= task.status&.humanize || "Not set" %>
          </span>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Priority
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= 
            case task.priority.to_i
            when 4 then 'bg-red-100 text-red-800'
            when 3 then 'bg-orange-100 text-orange-800'
            when 2 then 'bg-yellow-100 text-yellow-800'
            when 1 then 'bg-green-100 text-green-800'
            else 'bg-gray-100 text-gray-800'
            end
          %>">
            <%= 
              case task.priority.to_i
              when 4 then "Critical"
              when 3 then "High"
              when 2 then "Medium"
              when 1 then "Low"
              else "Not set"
              end
            %>
          </span>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Due date
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= task.due_date ? task.due_date.strftime("%B %d, %Y") : "No due date" %>
        </dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Created
        </dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= task.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </dd>
      </div>
    </dl>
  </div>
</div>
